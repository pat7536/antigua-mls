generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FavoritesList {
  id          String   @id @default(cuid())
  userId      String   // Clerk user ID
  title       String
  description String?
  shareUuid   String?  @unique // For public sharing
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  properties  FavoritesListProperty[]

  @@map("favorites_lists")
}

model FavoritesListProperty {
  id              String @id @default(cuid())
  favoritesListId String
  propertyId      String // Airtable property ID
  note            String?
  sortOrder       Int?

  // Relations
  favoritesList   FavoritesList @relation(fields: [favoritesListId], references: [id], onDelete: Cascade)

  @@unique([favoritesListId, propertyId])
  @@map("favorites_list_properties")
}
